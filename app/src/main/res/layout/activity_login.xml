<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/wallpaperloginbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/loginsquare"
        android:background="@drawable/loginsquare"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email" />
        <EditText
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:id="@+id/usernameedittext"
            android:background="@drawable/usernamelogin"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/username" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:layout_below="@+id/usernameedittext" />
        <EditText
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:id="@+id/passwordedittext"
            android:background="@drawable/usernamelogin"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/password"
            android:inputType="textPassword" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:id="@+id/verifyemail"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="Verify Email"
            android:layout_below="@+id/passwordedittext"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/orange"
            android:id="@+id/forgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:text="Forget Password"
            android:layout_below="@+id/passwordedittext"
            android:layout_alignParentEnd="true" />
        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/loginbutton"
            android:background="@drawable/loginbutton"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:layout_below="@+id/forgetpassword" />
        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/signup"
            android:background="@drawable/loginbutton"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:text="Sign up"
            android:layout_below="@id/loginbutton" />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_logo"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Or"
        android:layout_below="@+id/loginsquare"
        android:layout_centerHorizontal="true" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true" />
</RelativeLayout>