<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@drawable/wallpaperloginbackground"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		android:id="@+id/loginsquare"
		android:background="@drawable/loginsquare"
		android:padding="20dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="50dp"
		android:layout_marginTop="140dp"
		android:layout_marginRight="50dp"
		android:layout_centerHorizontal="true">
		<TextView
			android:textSize="16sp"
			android:textColor="@color/orange"
			android:id="@+id/username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:text="Email" />
		<EditText
			android:textSize="18sp"
			android:gravity="center_vertical"
			android:id="@+id/usernameedittext"
			android:background="@drawable/usernamelogin"
			android:padding="10dp"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginTop="5dp"
			android:layout_below="@+id/username" />
		<TextView
			android:textSize="16sp"
			android:textColor="@color/orange"
			android:id="@+id/password"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:text="Password"
			android:layout_below="@+id/usernameedittext" />
		<EditText
			android:textSize="18sp"
			android:gravity="center_vertical"
			android:id="@+id/passwordedittext"
			android:background="@drawable/usernamelogin"
			android:padding="10dp"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginTop="5dp"
			android:layout_below="@+id/password"
			android:inputType="textPassword" />
		<TextView
			android:textSize="16sp"
			android:textColor="@color/orange"
			android:id="@+id/repassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:text="Re-enter Password"
			android:layout_below="@+id/passwordedittext" />
		<EditText
			android:textSize="18sp"
			android:gravity="center_vertical"
			android:id="@+id/Repasswordedittext"
			android:background="@drawable/usernamelogin"
			android:padding="10dp"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:layout_marginTop="5dp"
			android:layout_below="@+id/repassword"
			android:inputType="textPassword" />
		<Button
			android:textStyle="bold"
			android:textColor="@color/white"
			android:gravity="center"
			android:id="@+id/signupbutton"
			android:background="@drawable/loginbutton"
			android:paddingLeft="10dp"
			android:paddingTop="5dp"
			android:paddingRight="10dp"
			android:paddingBottom="5dp"
			android:layout_width="fill_parent"
			android:layout_height="35dp"
			android:layout_marginTop="20dp"
			android:text="Sing up"
			android:layout_below="@+id/Repasswordedittext" />
		<Button
			android:textStyle="bold"
			android:textColor="@color/white"
			android:gravity="center"
			android:id="@+id/login"
			android:background="@drawable/loginbutton"
			android:paddingLeft="10dp"
			android:paddingTop="5dp"
			android:paddingRight="10dp"
			android:paddingBottom="5dp"
			android:layout_width="fill_parent"
			android:layout_height="35dp"
			android:layout_marginTop="20dp"
			android:text="Login"
			android:layout_below="@+id/signupbutton" />
	</RelativeLayout>
	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/logo"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_marginTop="80dp"
		android:src="@mipmap/ic_logo"
		android:layout_centerHorizontal="true" />
</RelativeLayout>
