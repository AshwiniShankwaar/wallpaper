<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/searchbar"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_bar_for_home_activity"
                android:paddingLeft="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/searchicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search" />

                <TextView
                    android:id="@+id/searchbartext"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/searchicon"
                    android:text="Search...."
                    android:textSize="18sp" />
            </RelativeLayout>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/searchbar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                app:auto_cycle="true"
                app:corner_radius="20"
                app:delay="0"
                app:error_image="@drawable/grey"
                app:period="5000"
                app:placeholder="@drawable/grey" />

            <LinearLayout
                android:id="@+id/buttonsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_slider"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/Toplayout"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/top"
                        android:id="@+id/top"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/latestlayout"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/latest"
                        android:scaleType="fitCenter"
                        android:id="@+id/latest"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latest"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/Categorylayout"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/Category"
                        android:src="@drawable/ic_category"
                        android:scaleType="fitCenter"
                        android:background="@android:color/transparent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:id="@+id/favlayout"
                   android:visibility="gone"
                   android:layout_weight="1"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center_horizontal">
                   <ImageButton
                       android:layout_width="45dp"
                       android:layout_height="45dp"
                       android:src="@drawable/ic_fav"
                       android:id="@+id/fav"
                       android:scaleType="fitCenter"
                       android:background="@android:color/transparent"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Favorite"
                       android:textSize="14sp"
                       android:textColor="#000000"
                       />
               </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonsection"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Treading"
                    android:id="@+id/header"
                    android:textSize="18sp"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    />

                <GridView
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="1080dp"
                    android:layout_below="@+id/header"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:clickable="true"
                    android:columnWidth="100dp"
                    android:drawSelectorOnTop="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:numColumns="2"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bacgroundnav"
        app:itemTextColor="@drawable/sectortext"
        app:itemIconTint="@drawable/sectortext"
        app:itemBackground="@color/white"
        android:background="@color/white"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>